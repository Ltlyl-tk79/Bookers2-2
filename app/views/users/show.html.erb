<main>
  <%= flash[:update] %>
  <div class= "container px-5 px-sm-o">
    <div class= "row">
      <div class= "col-md-3">
        <%= render "info", user: @user %>
        <%= render "layouts/errors", obj: @book %>
        <%= render "form", book: @book %>
      </div>
      <div class= "col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td>
                <%= attachment_image_tag(@user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg") %>
              </td>
              <td><%= link_to  book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>