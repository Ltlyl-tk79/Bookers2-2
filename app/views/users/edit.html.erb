<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        <%= render "layouts/errors", obj: @user %>
        <%= form_with model:@user, local:true do |f| %>
        <div class="form-group">
          <lavel for="user_name">Name</lavel><br>
          <%#= f.text_field :name, autofocus: true, placeholder :"名前" %>
          <%= f.text_field :name, autofocus: true, id:"user_name", placeholder:"名前" %><br>
        </div>
        <div class="form-group">
          <lavel for="user_image">Image</lavel><br>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
        </div>
        <div class="form-group">
          <lavel for="user_introduction">Introduction</lavel><br>
          <%#= f.text_area :introduction, autofocus :true, placeholder :"自己紹介文" %>
          <%= f.text_area :introduction, autofocus: true, id:"user_introduction", placeholder:"自己紹介文" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update User", class:"btn btn-secondary" %>
        </div>
        <% end %>

      </div>
    </div>
  </div>
</main>