<main>
  <div class="container px-5 px-sm-o">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%#= render "info", user: current_user %>
        <table class="table">
          <tr><%= attachment_image_tag(@user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </table>
        <!--<div class="row">-->
          <%= link_to edit_user_path(@user) do %>
            <i class= "btn btn-outline-secondary btn-block fas fa-user-cog"></i>
          <% end %>
        <!--</div>-->
        <h2 class="mt-3">new book</h2>
        <%#= render "form", book: @book %>
        <%= form_with model:@book, local:true do |f| %>
        <div class= "form-group">
          <lavel for= "book_title">Title</lavel>
          <%= f.text_field :title, class: "col-md-12" %>
        </div>
        <div class= "form-group">
          <label for= "book_opinion">Opinion</label>
          <%= f.text_field :body, class: "col-md-12" %>
        </div>
        <div class= "form-group">
          <%= f.submit "Create Book", class: "btn btn-success" %>
        </div>
        <% end %>
      </div>
      <div class= "col-md-8 offset-md-1">
        <h2>Users</h2>
        <table class= "table">
          <tr>
            <th>image</th>
            <th>name</th>
          </tr>
          <% @users each.do |user| %>
        </table>
      </div>
    </div>
  </div>
</main>