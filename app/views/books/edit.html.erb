<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>Editing Book</h2>

        <%= form_with model:@book, local:true do |f| %>
        <div class="form-group">
          <lavel for="book_title">Title</lavel><br>
          <%= f.text_field :title, autofocus: true, id:"book_title" %>
        </div>
        <div class="form-group">
          <lavel for="book_opinion">Opinion</lavel><br>
          <%= f.text_area :body, autofocus: true, id:"book_opinion" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update Book", class: "btn btn-success" %>
        </div>
        <% end %>
        <%= link_to "show", book_path(@book.id) %>
        |
        |
        <%= link_to "Back", books_path %>
      </div>
    </div>
  </div>
</main>