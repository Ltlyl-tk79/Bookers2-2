<main>
  <div class= "container px-5">
    <div class= "row">
      <div class= "col-md-3">
        <%= render "users/info", user: @user %>
        <%= render "users/form", book: @booknew %>
      </div>
      <div class= "col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class= "table">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book.user.id) do %>
                  <%= attachment_image_tag(@book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg") %><br>
                  <%= @book.user.name %>
                <% end %>
              </td>
              <td><%= @book.title %></td>
              <td><%= @book.body %></td>
              <% if @book.user_id == current_user.id %>
                <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %></td>
                <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger" %></td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>